                                    parser.assemblyFile+= "JNZ "+ ((RegistroSemanticoSTMT)parser.pilaSemantica.searchRS("RS_IF")).getExit_label() +  "\n" ;
                                :};

    else_statement      ::= else_stmt bloque |;

    else_stmt           ::= ELSE {:
