    call_function       ::= IDENTIFICADOR LPAREN RPAREN | read_f | write_f ;
            
    condicion           ::= condicion_2 AND condicion | 
                            condicion_2 OR condicion | 
                            condicion_2:exp {: RESULT = exp; :};

    condicion_2         ::= expresion:exp {: RESULT = exp; :};

    read_f              ::= READ LPAREN IDENTIFICADOR RPAREN | READ LPAREN RPAREN | 
